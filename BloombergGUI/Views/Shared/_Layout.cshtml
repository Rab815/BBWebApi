@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Bloomberg Prototype</title>
    <!-- jQuery moved to head due to requirement for Infragistics grid -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")

    @Scripts.Render("~/bundles/modernizr")
    
    @Styles.Render("~/Content/Infragistics/css/structure/bundle")
    @Styles.Render("~/Content/Infragistics/css/themes/metro/bundle")
    @Styles.Render("~/Content/grid")
    @Scripts.Render("~/bundles/infragisticsgrid")

    @Styles.Render("~/Content/foundation/css")
    @Styles.Render("~/Content/css")
</head>
<body>

    <div class="container body-content">
        <div style="width:100%">
            @RenderSection("addIdentifiers", required: false)

            @RenderSection("identifierList", required: false)
        </div>
        <div style="width:100%; float: left;">
            @RenderSection("bbResults", required: false)
        </div>
        @RenderBody()
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
